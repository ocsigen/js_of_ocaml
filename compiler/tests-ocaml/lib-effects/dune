(tests
 (build_if
  (>= %{ocaml_version} 5))
 (names unhandled_unlinked)
 (modules unhandled_unlinked)
 (action
  (pipe-outputs
   (with-accepted-exit-codes
    2
    (run node %{test}))
   (run cat)))
