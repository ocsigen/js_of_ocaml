(executable
 (name main)
 (modules main)
 (libraries js_of_ocaml)
 (link_flags
  (:standard -linkall))
 (modes js byte))

(rule
 (target main.js)
 (action
  (run %{bin:js_of_ocaml} --linkall -o %{target} %{dep:main.bc})))

(rule
 (target plugin.cmo)
 (action
  (run %{bin:ocamlc} -c %{dep:./plugin.ml})))

(rule
 (target plugin.js)
 (action
  (run %{bin:js_of_ocaml} %{dep:./plugin.cmo})))

(rule
 (target plugin2.cma)
 (action
  (run
   %{bin:ocamlc}
   -a
   %{dep:./plugin2a.ml}
   %{dep:./plugin2b.ml}
   -o
   plugin2.cma)))

(rule
 (target plugin2.js)
 (action
  (run %{bin:js_of_ocaml} %{dep:./plugin2.cma})))

(rule
 (target main.out)
 (deps plugin.js plugin2.js)
 (action
  (with-outputs-to
   %{target}
   (run %{bin:node} %{dep:./main.js}))))

(rule
 (target main.out2)
 (deps plugin.js plugin2.js)
 (action
  (with-outputs-to
   %{target}
   (run %{bin:node} %{dep:./main.bc.js}))))

(rule
 (alias runtest)
 (action
  (diff main.out.expected main.out)))

(rule
 (alias runtest)
 (action
  (diff main.out.expected main.out2)))
